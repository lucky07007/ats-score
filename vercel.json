{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py",
      "methods": ["POST"]  // CRITICAL FIX: Ensures the POST method is explicitly allowed
    },
    {
      "src": "/(.*)",
      "dest": "src/pages/$1"
    }
  ]
}
